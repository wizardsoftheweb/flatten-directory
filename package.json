{
  "name": "@wizardsoftheweb/flatten-directory",
  "version": "0.5.0",
  "description": "Flattens a source directory into a target directory",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=test nyc mocha",
    "test:integration-only": "mocha test/flattenDirectory.integration.ts",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prepublishOnly": "tsc --p tsconfig.npm.json"
  },
  "author": "CJ Harries <cj@wizardsoftheweb.pro> (https://wizardsoftheweb.pro/)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git://github.com/wizardsoftheweb/flatten-directory.git"
  },
  "bugs": {
    "url": "https://github.com/wizardsoftheweb/flatten-directory/issues"
  },
  "homepage": "https://github.com/wizardsoftheweb/flatten-directory#readme",
  "dependencies": {
    "bluebird": "^3.5.0",
    "minimatch": "^3.0.4"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.10",
    "@types/chai": "^4.0.4",
    "@types/minimatch": "^3.0.1",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.28",
    "@types/proxyquire": "^1.3.28",
    "@types/rimraf": "^2.0.2",
    "@types/sinon": "^2.3.3",
    "@types/sinon-chai": "^2.7.29",
    "@types/winston": "^2.3.5",
    "chai": "^4.1.2",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.5",
    "mocha": "^3.5.1",
    "mocha-logger": "^1.0.5",
    "nyc": "^11.2.1",
    "proxyquire": "^1.8.0",
    "rimraf": "^2.6.2",
    "sinon": "^3.2.1",
    "sinon-chai": "^2.13.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "winston": "^2.3.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*interfaces.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text-summary"
    ],
    "all": true
  }
}
