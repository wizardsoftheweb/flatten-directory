{
  "name": "@wizardsoftheweb/flatten-directory",
  "version": "0.1.0",
  "description": "Flattens a source directory into a target directory",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=test nyc mocha"
  },
  "author": "CJ Harries <cj@wizardsoftheweb.pro> (https://wizardsoftheweb.pro/)",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.5.0",
    "glob": "^7.1.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.10",
    "@types/chai": "^4.0.4",
    "@types/glob": "^5.0.32",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.28",
    "@types/sinon": "^2.3.3",
    "@types/winston": "^2.3.5",
    "chai": "^4.1.2",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.5",
    "mocha": "^3.5.1",
    "nyc": "^11.2.1",
    "sinon": "^3.2.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "winston": "^2.3.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*interfaces.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text-summary"
    ],
    "all": true
  }
}
